{
  "expo": {
    "name": "Pania",
    "slug": "Pania",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/branding/icon.png",
    "scheme": "pania",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "A daily companion app that listens to what's happening in your life, asks thoughtful questions, and surfaces wisdom from across spiritual and philosophical traditions.",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pania.app",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/branding/android-icon-foreground.png",
        "backgroundImage": "./assets/images/branding/android-icon-background.png",
        "monochromeImage": "./assets/images/branding/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/branding/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/branding/splash-icon.png",
          "imageWidth": 280,
          "resizeMode": "contain",
          "backgroundColor": "#F3EDE7",
          "dark": {
            "backgroundColor": "#1A1816"
          }
        }
      ],
      "expo-web-browser",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
